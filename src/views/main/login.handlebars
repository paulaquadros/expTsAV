<div class='col-lg-12'>
  <div class='page-header'>
    <h1 class='page-header'>Acesso de usuário</h1>
  </div>
  <div class='bs-component col-6'>
    <form action='/login' method='post'>
      <div class='form-group'>
        <label class='col-form-label mt-4' for='username'>Username</label>
        <input
          class='form-control'
          type='text'
          id='username'
          name='username'
          value='{{username}}'
        />
        {{#if senhaIncorreta}}
          <div class='invalid-feedback' style='display: block'>
            Usuário e/ou senha incorretos.
          </div>
        {{/if}}
      </div>
      <div class='form-group'>
        <label class='col-form-label mt-2' for='sigla'>Senha</label>
        <input
          class='form-control'
          type='password'
          id='senha'
          name='senha'
          value='{{senha}}'
        />
      </div>
      <div class='invalid-feedback' style='display: block'>
        {{showErrors errors 'senha'}}
      </div>
      <div class='form-group mt-4'>
        <button type='submit' class='btn btn-primary'>Entrar</button>
      </div>
    </form>
  </div>
</div>