<div class='col-lg-12'>
  <div class='page-header'>
    <h1 class='page-header'>Criar conta</h1>
  </div>
  <div class='bs-component col-6'>
    <form action='/signup' method='post'>

      <div class='form-group'>
        <label class='col-form-label mt-4' for='name'>Nome</label>
        <input
          class='form-control'
          type='text'
          id='name'
          name='name'
          value='{{funcionario.name}}'
        />
      </div>
      <div class='invalid-feedback' style='display: block'>
        {{showErrors errors 'name'}}
      </div>

      <div class='form-group'>
        <label class='col-form-label mt-4' for='email'>E-mail</label>
        <input
          class='form-control'
          type='text'
          id='email'
          name='email'
          value='{{funcionario.email}}'
        />
      </div>
      <div class='invalid-feedback' style='display: block'>
        {{showErrors errors 'email'}}
      </div>

      <div class='form-group'>
        <label for='departamentos' class='form-label mt-4'>Selecione seu
          departamento</label>
        <select class='form-select' name='departamentoId' id='departamentos'>
          {{#each departamentos}}
            <option value='{{id}}'>{{name}}</option>
          {{/each}}
        </select>
      </div>

      <div class='form-group'>
        <label class='col-form-label mt-4' for='email'>Senha</label>
        <input
          class='form-control'
          type='password'
          id='senha'
          name='senha'
          value='{{funcionario.senha}}'
        />
      </div>
      <div class='invalid-feedback' style='display: block'>
        {{showErrors errors 'senha'}}
      </div>

      <div class='form-group'>
        <label class='col-form-label mt-4' for='email'>Confirma sua senha</label>
        <input
          class='form-control'
          type='password'
          id='confirm-senha'
          name='confirm-senha'
          value=''
        />
      </div>
      <div class='invalid-feedback' style='display: block'>
        {{showErrors errors 'email'}}
      </div>

      <div class='form-group mt-4'>
        <input type='hidden' name='_csrf' value='{{csrf}}' />
        <button type='submit' class='btn btn-primary'>Cadastrar</button>
      </div>
    </form>
  </div>
</div>