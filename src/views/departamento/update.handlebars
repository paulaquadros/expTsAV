<div class='col-lg-12'>
  <div class='page-header'>
    <h1 class='page-header'>Atualizar informações</h1>
  </div>
  <div class='bs-component col-6'>
    <form action='/departamento/update/{{departamento.id}}' method='post'>
      <div class='form-group'>
        <label class='col-form-label mt-4' for='name'>Nome</label>
        <input
          class='form-control'
          type='text'
          id='name'
          name='name'
          value='{{departamento.name}}'
        />
      </div>
      <div class='invalid-feedback' style='display: block'>
        {{showErrors errors 'name'}}
      </div>
      <div class='form-group'>
        <label class='col-form-label mt-2' for='sigla'>Sigla</label>
        <input
          class='form-control'
          type='text'
          id='sigla'
          name='sigla'
          value='{{departamento.sigla}}'
        />
      </div>
      <div class='invalid-feedback' style='display: block'>
        {{showErrors errors 'sigla'}}
      </div>
      <div class='form-group mt-4'>
        <input type='hidden' name='_csrf' value='{{csrf}}' />
        <button type='submit' class='btn btn-primary'>Atualizar</button>
      </div>
    </form>
  </div>
</div>