<div class='col-lg-12'>
  <div class='page-header'>
    <h1 class='page-header'>Novo Departamento</h1>
  </div>
  <div class='bs-component col-6'>
    <form action='departamento/create' method='post'>
      <div class='form-group'>
        <label class='col-form-label mt-4' for='name'>Nome</label>
        <input class='form-control' type='text' id='name' name='name' />
      </div>
      <div class='form-group'>
        <label class='col-form-label mt-2' for='sigla'>Sigla</label>
        <input class='form-control' type='text' id='sigla' name='sigla' />
      </div>
      <div class='form-group mt-4'>
        <button type='submit' class='btn btn-primary'>Adicionar</button>
      </div>
    </form>
  </div>
</div>